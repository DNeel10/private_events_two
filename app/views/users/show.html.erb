<h1><%= @user.email %></h1>
<h2>Created Events</h2>
<div>
  <ul>
    <% @user.created_events.each do |event| %>
      <li><%= link_to event.title, event %></li>
    <% end %>
  </ul>
</div>

<h2>Events you are attending</h2>
<div>
  <h2>Upcoming Events</h2>
  <ul>
    <% @user.attended_events.upcoming_events.each do |event| %>
      <li><%= link_to event.title, event %> | 
          <%= link_to "Cancel Attendance", attendance_path, params: { "attendances" => { attended_event_id: event.id } },  method: :delete, data: {
              turbo_method: :delete,
              turbo_confirm: "Are you sure you no longer wish to attend this event?"
            } %></li>
    <% end %>
  </ul>
</div><br>
 
<div>
  <h2>Past Events</h2>
  <ul>
    <% @user.attended_events.past_events.each do |event| %>
      <li><%= link_to event.title, event %></li>
    <% end %>
  </ul>
</div><br>



